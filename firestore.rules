rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null; // Basic authenticated access for all collections
    }
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId; // Users can read their own data
      allow write: if request.auth != null && (
        request.auth.uid == userId || // Users can update their own data
        request.auth.token.role == 'admin' // Admins can write to any user document
      );
    }
  }
}